# Server configuration
PORT=5000

# Hedera credentials
HEDERA_ACCOUNT_ID=0.0.yourAccountId
HEDERA_PRIVATE_KEY=yourPrivateKey
HEDERA_NETWORK_TYPE=testnet  # testnet or mainnet

# HCS Topic ID (will be created if not provided)
HCS_TOPIC_ID=

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret

# CORS configuration
CLIENT_URL=http://localhost:3000

# Twitter account credentials (for agent-twitter-client)
TWITTER_USERNAME=YourTwitterUsername
TWITTER_PASSWORD=YourTwitterPassword
TWITTER_EMAIL=your.email@example.com

# Twitter API credentials (optional for additional features)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_KEY_SECRET=your_twitter_api_key_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Twitter bot configuration
TWITTER_BOT_USERNAME=YourBotUsername
TWITTER_POLL_INTERVAL=60  # Check for new mentions every 60 seconds 

